root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space

[*.js]
indent_size = 2
indent_style = space

[*.php]
indent_style = space
indent_size = 4

[*.yml,*.yaml]
indent_size = 2
indent_style = space
